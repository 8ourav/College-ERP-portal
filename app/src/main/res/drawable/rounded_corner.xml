<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" tools:ignore="StateListReachable">
        <shape
            android:shape="rectangle">

            <corners android:radius="24dp"/>
            <stroke android:width="1dip" android:color="@color/black"/>

        </shape>
    </item>
    <item android:state_pressed="true" tools:ignore="StateListReachable">
        <shape
            android:shape="rectangle">

            <corners android:radius="24dp"/>
            <stroke android:width="1dip" android:color="#D8D2D2"/>

        </shape>
    </item>
</selector>