<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity10">

    <ImageButton
        android:id="@+id/home6"
        android:layout_width="64dp"
        android:layout_height="55dp"
        android:src="@drawable/arrow_back"
        android:contentDescription="@string/h1"/>

    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#B5F1F8"
        android:layout_below="@id/home6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/calendar_view"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#96B4E3"
            android:text="Present" />

        <Button
            android:id="@+id/btn_absent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"
            android:backgroundTint="#E69993"
            android:text="Absent" />


    </LinearLayout>

</RelativeLayout>